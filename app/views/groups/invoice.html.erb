<h2><%= @group.name %> Invoice</h2>

<%= form_tag group_invoice_path(@group.id), method: :get do %>
  <div>
    <%= label_tag :start_date %>
    <%= select_date Date.today.at_beginning_of_month, prefix: :start_date %>
  </div>
  <div>
    <%= label_tag :end_date %>
    <%= select_date Date.today, prefix: :end_date %>
  </div>
  <%= submit_tag "Generate", class: "btn btn-primary" %>
<% end %>

<h3>Total: <%= number_to_currency(@invoice.total, precision: 0) %></h3>
<h3>Hours: <%= minutes_to_hours(@invoice.duration) %></h3>

<table class="table table-hover table-striped table-bordered">
  <thead>
    <tr>
      <th>Student</th>
      <th>Hours</th>
      <th>Total</th>
    </tr>
  </thead>
  <tbody>
    <% @invoice.student_invoices.each do |invoice| %>
      <tr>
        <td><%= invoice.student.full_name %></td>
        <td><%= minutes_to_hours(invoice.duration) %></td>
        <td><%= number_to_currency(invoice.total, precision: 0) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
