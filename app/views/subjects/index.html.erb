<h1>Subjects</h1>

<table class="table table-hover table-striped table-bordered">
  <thead>
    <tr>
      <th>Name</td>
      <th>Groups</td>
    </tr>
  </thead>
  <tbody>
    <% @subjects.each do |subject| %>
      <tr>
        <td><%= link_to subject.name, subject_groups_path(subject.id) %></td>
        <td><%= subject.groups.count %></td>
      </tr>
    <% end %>
  </tbody>
</table>
