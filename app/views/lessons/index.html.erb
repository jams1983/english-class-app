<div class="clearfix">
  <h2 class="pull-left">Group <%= @group.name %> lessons <small><%= @group.students.size %> students</small> </h2>
  <h2><%= link_to "New lesson", new_group_lesson_path(@group.id), class: "btn btn-primary pull-right" %></h2>
</div>


<table class="table table-hover table-striped">
  <thead>
    <tr>
      <th>Date</th>
      <th>Duration</th>
      <th>Attendance</th>
    </tr>
  </thead>
  <tbody>
    <% @lessons.each do |lesson| %>
      <tr>
        <td><%= link_to lesson.date, group_lesson_path(@group.id, lesson.id) %></td>
        <td><%= lesson.duration %></td>
        <td><%= lesson.attendance_summary %></td>
      </tr>
    <% end %>
  </tbody>
</table>
