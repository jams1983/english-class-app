<h2>Group <%= @group.name %> lessons</h2>
<h3><%= @group.students.size %> students</h3>

<%= link_to "New lesson", new_group_lesson_path(@group.id), class: "btn btn-primary pull-right" %>

<table class="table table-hover table-striped table-bordered">
  <thead>
    <tr>
      <th>Date</th>
      <th>Duration</th>
      <th>Attendance</th>
    </tr>
  </thead>
  <tbody>
    <% @lessons.each do |lesson| %>
      <tr>
        <td><%= link_to lesson.date, group_lesson_path(@group.id, lesson.id) %></td>
        <td><%= lesson.duration %></td>
        <td><%= lesson.attendance_summary %></td>
      </tr>
    <% end %>
  </tbody>
</table>
